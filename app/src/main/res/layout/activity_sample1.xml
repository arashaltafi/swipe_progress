<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sample1.Sample1">

    <id.ss564.lib.slidingbutton.SlidingButton
        app:sliding_text="آرش"
        app:sliding_text_size="14sp"
        app:sliding_text_fontFamily="@font/vazir"
        app:sliding_text_background="@color/purple_700"
        app:sliding_text_textStyle="bold"
        app:sliding_text_paddingStart="12dp"
        app:sliding_text_paddingEnd="12dp"
        app:sliding_text_paddingBottom="8dp"
        app:sliding_text_paddingTop="8dp"
        app:sliding_button_width="100dp"
        app:sliding_button_icon="@drawable/ic_baseline_person_24"
        app:sliding_button_icon_tint="@color/white"
        app:sliding_icon_scaleType="fitXY"
        app:sliding_button_background="@color/black"
        app:sliding_button_paddingStart="12dp"
        app:sliding_button_paddingEnd="12dp"
        app:sliding_button_paddingTop="8dp"
        app:sliding_button_paddingBottom="8dp"
        app:sliding_button_marginStart="4dp"
        app:sliding_button_marginEnd="4dp"
        app:sliding_button_marginTop="2dp"
        app:sliding_button_marginBottom="2dp"
        app:sliding_enabledTextAlpha="true"
        app:sliding_showTrack="true"
        app:sliding_trackBackground="@color/white"
        app:sliding_trackBackgroundTint="@color/white"
        app:sliding_trackExtendTo="button"
        app:sliding_corner_radius="8dp"
        app:sliding_button_height="150dp"
        app:sliding_text_color="@color/purple_200"
        android:id="@+id/slidingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <id.ss564.lib.slidingbutton.SlidingButton
        android:layout_marginTop="20dp"
        android:id="@+id/slidingButton4"
        style="@style/SlidingButton.RoundedTrackabale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/sliding_shape_background" />

    <id.ss564.lib.slidingbutton.SlidingButton
        android:layout_marginTop="20dp"
        android:id="@+id/slidingButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/sliding_rect_background"
        app:sliding_button_background="@drawable/oval_morp_shadow"
        app:sliding_button_height="84dp"
        app:sliding_button_icon="@drawable/ic_baseline_favorite_24"
        app:sliding_button_icon_tint="@drawable/sliding_icon_tint"
        app:sliding_button_width="84dp"
        app:sliding_icon_scaleType="centerInside"
        app:sliding_text="love_it"
        app:sliding_text_color="#535353"
        app:sliding_text_textStyle="bold" />

    <id.ss564.lib.slidingbutton.SlidingButton
        android:layout_marginTop="20dp"
        android:id="@+id/slidingButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/sliding_rect_background_2"
        app:sliding_button_background="@drawable/sliding_button_oval_background_2"
        app:sliding_button_height="48dp"
        app:sliding_button_icon="@drawable/sliding_icon_example_2"
        app:sliding_button_icon_tint="@android:color/white"
        app:sliding_button_marginBottom="4dp"
        app:sliding_button_marginEnd="4dp"
        app:sliding_button_marginStart="4dp"
        app:sliding_button_marginTop="4dp"
        app:sliding_button_width="48dp"
        app:sliding_icon_scaleType="centerInside"
        app:sliding_text="UNLOCK"
        app:sliding_showTrack="true"
        app:sliding_corner_radius="24dp"
        app:sliding_trackBackgroundTint="@drawable/sliding_track_tint_example_3"
        app:sliding_text_color="@android:color/white"
        app:sliding_text_fontFamily="sans-serif-condensed-medium" />

    <id.ss564.lib.slidingbutton.SlidingButton
        android:layout_marginTop="20dp"
        android:id="@+id/slidingButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/sliding_rect_background_3"
        app:sliding_button_background="@drawable/sliding_button_oval_background_3"
        app:sliding_button_height="48dp"
        app:sliding_button_icon="@drawable/sliding_icon_example_3"
        app:sliding_button_icon_tint="@android:color/white"
        app:sliding_button_width="48dp"
        app:sliding_icon_scaleType="centerInside"
        app:sliding_text="@null" />

</LinearLayout>