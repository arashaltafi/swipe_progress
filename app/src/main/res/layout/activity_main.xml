<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Swipe Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:text="sample 0"
                android:id="@+id/btn_sample_0"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:text="sample 1"
                android:id="@+id/btn_sample_1"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:text="sample 2"
                android:id="@+id/btn_sample_2"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:text="sample 3"
                android:id="@+id/btn_sample_3"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="20dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Progress Layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:text="sample 4"
                android:id="@+id/btn_sample_4"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:text="sample 5"
                android:id="@+id/btn_sample_5"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="20dp"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Swipe Left Or Right (X)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:text="sample 6"
                android:id="@+id/btn_sample_6"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>